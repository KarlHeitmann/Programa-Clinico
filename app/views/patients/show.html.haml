%ol.breadcrumb
  %li.breadcrumb-item= link_to "Inicio", root_path
  %li.breadcrumb-item.active= @patient.show_nombre
.container
  .row
    .col
      %h1
        Detalle de Paciente
        = @patient.show_nombre
  .row
    .col
      %p#notice= notice

      %p
        %b Apellido paterno:
        = @patient.apellido_paterno
      %p
        %b Apellido materno:
        = @patient.apellido_materno
      %p
        %b Nombre:
        = @patient.nombre
      %p
        %b Rut:
        = @patient.rut
      %p
        %b Fecha nacimiento:
        = @patient.fecha_nacimiento
    .col
      %p
        %b Telefono:
        = @patient.telefono
      %p
        %b Celular:
        = @patient.celular
      %p
        %b Direccion:
        = @patient.direccion
      %p
        %b Ocupacion:
        = @patient.ocupacion
      %p
        %b Derivado:
        = @patient.derivado
  .row
    .col
      = button_to 'Ver diagn√≥sticos', patient_diagnoses_path(@patient), method: :get, class:      "btn btn-outline-primary btn-sm"
    .col
      = button_to 'Editar', edit_patient_path(@patient), method: :get, class: "btn btn-outline-success btn-sm"

