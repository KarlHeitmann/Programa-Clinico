= form_for @patient do |f|
  - if @patient.errors.any?
    #error_explanation
      %h2= "#{pluralize(@patient.errors.count, "error")} prohibited this patient from being saved:"
      %ul
        - @patient.errors.full_messages.each do |msg|
          %li= msg

  .row
    .col
      %fieldset.form-group
        = f.label :apellido_paterno
        = f.text_field :apellido_paterno, class: "form-control"
      %fieldset.form-group
        = f.label :apellido_materno
        = f.text_field :apellido_materno, class: "form-control"
      %fieldset.form-group
        = f.label :nombre
        = f.text_field :nombre, class: "form-control"
      %fieldset.form-group
        = f.label :rut
        = f.text_field :rut, class: "form-control"
      %fieldset.form-group
        = f.label :fecha_nacimiento
        = f.text_field :fecha_nacimiento, class: "form-control form-date", "data-provide" => "datepicker", "data-date-format" => "dd/mm/yyyy", "data-date-autoclose" => "true", "data-date-language" => "es"
    .col
      %fieldset.form-group
        = f.label :telefono
        = f.text_field :telefono, class: "form-control"
      %fieldset.form-group
        = f.label :celular
        = f.text_field :celular, class: "form-control"
      %fieldset.form-group
        = f.label :direccion
        = f.text_field :direccion, class: "form-control"
      %fieldset.form-group
        = f.label :ocupacion
        = f.text_field :ocupacion, class: "form-control"
      %fieldset.form-group
        = f.label :derivado
        = f.text_field :derivado, class: "form-control"
  .row
    .col
      %fieldset.form-group
        = f.submit 'Save', class: "btn btn-outline-primary"
